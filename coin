<!DOCTYPE html>
<html>
<head>
    <title>Coin System Example</title>
    <style>
        body {
            font-family: Arial;
            text-align: center;
            padding: 40px;
        }
        #coinBox {
            font-size: 28px;
            margin-bottom: 20px;
            font-weight: bold;
        }
        button {
            padding: 12px 25px;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>My Website Coin System</h1>

    <div id="coinBox">Coins: 0</div>

    <button onclick="addCoins(10)">Earn 10 Coins</button>
    <br><br>
    <button onclick="resetCoins()">Reset Coins</button>

    <script>
        // Load saved coins
        let coins = localStorage.getItem("coins");
        if (!coins) {
            coins = 0;
        } else {
            coins = parseInt(coins);
        }

        // Update display
        function updateDisplay() {
            document.getElementById("coinBox").innerText = "Coins: " + coins;
        }

        // Add coins
        function addCoins(amount) {
            coins += amount;
            localStorage.setItem("coins", coins);
            updateDisplay();
        }

        // Reset coins
        function resetCoins() {
            coins = 0;
            localStorage.setItem("coins", coins);
            updateDisplay();
        }

        updateDisplay();
    </script>
</body>
</html>
